/* pages/my/my.wxss */
.my-root{
  background: linear-gradient(180deg, #FFFFFF 0%, #EAEAEA 100%);
  z-index: 0;
  height: 1458rpx;
  position: relative;
}
.my-background{
  position: absolute;
  width: 100%;
  height: 488rpx;
  left: 0px;
  top: 0px;
  z-index: -1;
  background: linear-gradient(180deg, #6C63FF 0%, rgba(255, 255, 255, 0) 250%);

  border-radius: 0px 0px 30px 30px;
}

.my-top-bar{
  position: relative;
  width: 100%;
  height: 175rpx;
  left: 0px;
  top: 0px;
}
.my-top-bar-title{
  position: absolute;
  left: calc(50% - 34px/2 - 146px);
  height: 48rpx;
  bottom: 19rpx;
  color: white;
  font-size: 34rpx;
  line-height: 48rpx;
}

.my-top-bar-border{
  position: absolute;
  height: 0.5px;
  left: 0%;
  right: 0%;
  top: 175rpx;

  background: rgba(0, 0, 0, 0.1);
}

.my-main{
  height: 1282rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;

  background: none;

  padding: 0 48rpx;
  padding-top: 54rpx;
}

.my-user{
  width: 100%;
  height: 112rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.my-info{
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.my-avator{
  height: 112rpx;
  width: 112rpx;
  border-radius: 112rpx;
}

.my-userInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: white;
}

.my-name{
  width: 200rpx;
  font-size: 40rpx;
  line-height: 40rpx;
}

.my-location{
  font-size: 28rpx;
  line-height: 34rpx;
}

.my-set-icon{
  width: 44rpx;
  height: 44rpx;
  margin-left: auto;
}

.my-history{
  width: 100%;
  height: 260rpx;

  background: #FFFFFF;
  border-radius: 24rpx;

  display: flex;
  flex-direction: column;
  margin-top: 28rpx;
}

.my-history-top{
  height: 48rpx;
  margin-top: 42rpx;
  padding: 0 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.my-history-title{
  font-size: 40rpx;
  font-weight: 600;
}

.my-history-count{
  font-size: 20rpx;
  color: #AEB1C1;
}

.my-history-list{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 32rpx;
}

.my-history-item{
  height: 104rpx;
  width: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.my-history-item-title{
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  width: 100%;
}

.my-history-item-icon{
  height: 60rpx;
  width: 60rpx;
}

.my-vip{
  height: 120rpx;
  padding-left: 35rpx;
  padding-right: 26rpx;
  background: linear-gradient(90deg, rgb(255, 224, 191) 0%, rgba(254, 238, 219, 0.8) 100%);
  box-shadow: inset 0px 0px 29px rgba(254, 238, 219, 0.47);
  border-radius: 20rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 18rpx;
}

.my-vip-title{
  font-style: normal;
  font-weight: 600;
  width: 140rpx;
  font-size: 32rpx;
  line-height: 46rpx;

  color: #755121;
}

.my-vip-prompt{
  width: 268rpx;
  height: 34rpx;

  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 26rpx;
  line-height: 34rpx;

  color: #C29C5E;
}

.my-vip-btn{
  width: 160rpx !important;
  height: 44rpx !important;
  text-align: center;
  padding: 0%;

  background: #FFFFFF;
  border-radius: 24rpx;

  font-size: 22rpx;
  line-height: 44rpx;
  color: #7B4D14;
}

.my-vip-split{
  height: 84rpx;
  width: 0%;
  border-left: 2rpx dashed #C29C5E;
}

.my-serve{
  box-sizing: border-box;
  height: 400rpx;
  background: #FFFFFF;
  border-radius: 24rpx;

  display: flex;
  flex-direction: column;
  gap: 8rpx;

  padding: 42rpx 24rpx ;
}

.my-serve-title{
  font-family: 'PingFang SC';
font-style: normal;
font-weight: 700;
font-size: 40rpx;
line-height: 48rpx;
color: #0A0C0B;

}

.my-serve-list{
  display: flex;
  flex-direction: column;
}

.my-serve-item{
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 84rpx;

  border-bottom: 2rpx dashed rgba(0, 0, 0, 0.2);
}

.my-serve-item-icon{
  height: 20rpx;
  width: 20rpx;
}

.my-serve-item-title{
  font-size: 28rpx;
  color: #575961;
}

.log-prompt{
  z-index: 999;
  position: absolute;
  width: 750rpx;
  bottom: 0rpx;
}