/* pages/analysis/uploadInfo/uploadInfo.wxss */
.upload-root{
  position: relative;
  height: 1282rpx;
  display: flex;
  flex-direction: column;
}

.upload-title{
  width: 100%;
  height: 300rpx;
  position: relative;
}

.upload-title-text{
  position: absolute;
  left: 48rpx;
  top: 58rpx;

  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 500;
  font-size: 40rpx;
  line-height: 60rpx;

  color: #000000;
}

.upload-bg-img{
  width: 492rpx;
  height: 290rpx;
  position: absolute;
  right: 0;
}

.upload-main{
  height: 100%;
  box-sizing: border-box;
  z-index: 99;

  padding-top: 100rpx;
  
  border-top-left-radius: 60rpx;
  border-top-right-radius: 60rpx;
  background-color: #fff;

  display: grid;
  grid-template-columns: repeat(2, 318rpx);
  grid-template-rows: 120rpx 120rpx 368rpx;
  justify-content: center;
  align-items: center;
  row-gap: 54rpx;
  column-gap: 18rpx;
}

.upload-area, .upload-time, .upload-file{
  position: relative;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  border: 2rpx solid rgba(0, 0, 0, 0.5);
  border-radius: 40rpx;

  padding: 0 40rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center; */
}

.upload-area{
  grid-column: 1 / 3;
}

.upload-file{
  grid-column: 1 / 3;
}

.picker, .file-picker{
  height: 44rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  line-height: 46rpx;
}

.region-pick-icon{
  width: 30rpx;
  height: 40rpx;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
}

.pick-icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 24rpx;
  top: 40rpx;
}

.pick-file-icon{
  width: 40rpx;
  height: 40rpx;
  /* position: absolute;
  right: 24rpx;
  top: 40rpx; */
}

.file-picker{
  justify-content: center;
  gap:12rpx;
}

.upload-file-help-icon{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}

.upload-file-help-bg{
  position: absolute;
  top: 0%;
  width: 100%;
  height: 100%;

  background: rgba(0, 0, 0, 0.1);
}

.upload-file-help-content{
  width: 654rpx;
  height: 560rpx;

  display: flex;
  flex-direction: column;
  align-items: center;

  position: absolute;
  left: 48rpx;
  bottom: 385rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.help-title{
  margin-top: 64rpx;
  margin-bottom: 32rpx;

  font-style: normal;
  font-weight: 600;
  font-size: 34rpx;
  line-height: 38rpx;
}

.help-detail{
  box-sizing: border-box;
  height: 240rpx;

  padding: 0 49rpx;
  font-weight: 300;
  font-size: 32rpx;
  line-height: 44rpx;
  opacity: 0.7;
}

.help-btn{
  padding: 0;

  height: 110rpx;
  min-width: 100%;
  border-radius: 0%;
  margin-top: auto;
  color: #576B95;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);

  font-size: 34rpx;
  line-height: 110rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
} 

.upload-submit{
  width: 340rpx;
  height: 80rpx;

  grid-column: 1 / 3;

  background: #6C63FF;
  border-radius: 40rpx;

  color: #fff;
  font-size: 32rpx;
  line-height: 48rpx;
  
}

.upload-func-title{
  box-sizing: border-box;
  height: 60rpx;

  position: absolute;
  left: 40rpx;
  top: -30rpx;
  
  padding: 10rpx 14rpx;

  background-color: #fff;
  
  font-weight: 300;
  font-size: 28rpx;
  line-height: 40rpx;
}

.log-prompt{
  z-index: 9999999;
  position: absolute;
  width: 750rpx;
  bottom: 0;
}
